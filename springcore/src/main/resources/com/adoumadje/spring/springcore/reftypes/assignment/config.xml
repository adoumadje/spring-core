<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="item1" class="com.adoumadje.spring.springcore.reftypes.assignment.Item">
        <property name="id" value="1" />
        <property name="name" value="Headphone" />
        <property name="price" value="125.48" />
        <property name="quantity" value="2" />
    </bean>
    <bean name="item2" class="com.adoumadje.spring.springcore.reftypes.assignment.Item">
        <property name="id" value="2" />
        <property name="name" value="Computer" />
        <property name="price" value="840.99" />
        <property name="quantity" value="1" />
    </bean>

    <bean name="shoppingcart" class="com.adoumadje.spring.springcore.reftypes.assignment.ShoppingCart">
        <property name="items">
            <list>
                <ref bean="item1" />
                <ref bean="item2" />
            </list>
        </property>
    </bean>

</beans>